<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecoveryActivity"
    android:background="@color/dark_purple"
    >


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Восстановление
        пароля"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="148dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="358dp"
        android:layout_height="73dp"
        android:text="Пожалуйста, введите логин или эл. почту, на которые был зарегистрирован аккаунт"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_marginTop="134dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/editTextText6"
        android:layout_width="353dp"
        android:layout_height="70dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/login"
        android:drawableStart="@drawable/baseline_mail_24"
        android:paddingStart="34dp"
        android:drawablePadding="19dp"
        android:hint="Логин или email"
        android:textColorHint="@color/dark_purple"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintTop_toBottomOf="@id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="175dp"
        android:layout_height="59dp"
        android:background="@drawable/white_button"
        android:onClick="recover_action"
        android:text="Отправить"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/editTextText6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/editTextText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:onClick="backtosignin"
        android:text="Вернуться"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="28dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>